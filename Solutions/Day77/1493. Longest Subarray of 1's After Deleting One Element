class Solution {
    public int longestSubarray(int[] nums) {
        int max_cnt = 0;
        for (int i = 0; i < nums.length; i++) {
            int cnt = 0;
            int Zcnt = 0;
            for (int j = i; j < nums.length; j++) {
                if (nums[j] == 1) {
                    cnt++;
                } else {
                    if (Zcnt == 0) {
                        Zcnt++;
                    } else {
                        break;
                    }
                }
            }
            max_cnt = Math.max(max_cnt, cnt);

        }
        return max_cnt == nums.length ? max_cnt - 1 : max_cnt;
    }
}
