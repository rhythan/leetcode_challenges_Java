class Solution {
    public int numberOfSubarrays(int[] nums, int k) {
        int cnt = 0;
        int left = 0;
        int oddCount = 0, p = 0;
        for (int right = 0; right < nums.length; right++) {
            if (nums[right] % 2 != 0) {

                p = 0;
                oddCount++;
            }
            while (oddCount == k) {
                p++;
                if (nums[left] % 2 != 0)
                    oddCount--;
                left++;

            }
            cnt += p;
        }
        return cnt;

    }
}
