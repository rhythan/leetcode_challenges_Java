class Solution {
    public int[] constructTransformedArray(int[] nums) {
        int[] answer = new int[nums.length];
        for(int i = 0 ; i < nums.length ; i ++){
            if(nums[i]==0) answer[i]=nums[i];
            
            else{
                int index = ((i+nums[i])%nums.length + nums.length)% nums.length ;
                answer[i] = nums[index];
            }
        }
        return answer;
        
    }
}
