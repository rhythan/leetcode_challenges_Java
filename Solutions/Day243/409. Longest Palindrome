class Solution {
    public int longestPalindrome(String s) {
        Map<Character, Integer> map = new HashMap<>();
        for (char ch : s.toCharArray())
            map.put(ch, map.getOrDefault(ch, 0) + 1);
        int size = 0;
        boolean odd = false;

        for (Map.Entry<Character, Integer> e : map.entrySet()) {

            if (e.getValue() % 2 == 0)
                size += e.getValue();
            else {
                size += e.getValue() - 1;
                odd = true;
            }
        }
        if (odd)
            size += 1;
        return size;

    }
}
