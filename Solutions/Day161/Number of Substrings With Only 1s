class Solution {
    public int numSub(String s) {
        int n = s.length()  ;
        long ones = 0 ,cnt = 0 ;
        for(int i = 0 ; i < n ; i ++){
            if(s.charAt(i)=='1') ones++;
            else{
                cnt+=(ones*(ones+1)/2);
                ones=0;
            }
        }
        cnt+=(ones*(ones+1)/2);
        
        
        return (int)(cnt%1000000007);
    }
    
    
}
