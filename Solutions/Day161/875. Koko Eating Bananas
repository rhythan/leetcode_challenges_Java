class Solution {
    public int minEatingSpeed(int[] piles, int h) {
        int max = 0 , ans = 0 ;
        int n = piles.length;
        for(int num : piles){
            if(num>max){
                max=num;
            }
        }
        int left = 1 , right = max;
        while(left<right){
            int mid = (left+right)/2;
            int reqtime = findreqtime(piles,mid);
            if(reqtime<=h){
                right=mid;
            }
            else{
                left=mid+1;
            }
        }
        return left;
    }
    int findreqtime(int[] piles , int mid){
        int req = 0 ;
        for(int i = 0 ; i < piles.length; i ++){
            req+=(piles[i]+mid-1)/mid;
        }
        return req;
    }
}
