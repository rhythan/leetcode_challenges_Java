class Solution {
    public int numSubmat(int[][] mat) {
        int m =mat.length; 
        int n =mat[0].length; 
        int[] height = new int[n];
        int ans = 0 ;
        for(int i = 0 ; i < m ; i ++){
            for(int j = 0 ; j < n ; j ++){
                if(mat[i][j]==0) height[j]=0;
                else height[j]++;
            }
            ans+=count(height);
        }
        return ans;

    }
    static int count(int[] arr){
        int size = arr.length;
        int res = 0 ;
        for(int i = 0 ; i < size ; i ++){
            int minheight = arr[i];
            for(int k = i ; k >= 0 ; k--){
                minheight=Math.min(minheight,arr[k]);
                res+=minheight;

            }
            
        }
        return res;
        
    }
}
