class Solution {
    public int findLengthOfLCIS(int[] nums) {
        int cnt = 1 ; 
        int max = cnt ;
        for(int i = 1 ; i < nums.length ; i ++){
            if(nums[i]>nums[i-1]){
                cnt++;
            }
            else{
                cnt=1;
            }
            max=Math.max(cnt,max);
        }
        return max;
    }
}
