
class Solution {
    public int bitwiseComplement(int num) {
        String binary = Integer.toBinaryString(num);
        StringBuilder s = new StringBuilder();

        for(int i = 0; i < binary.length(); i++) {
            if(binary.charAt(i) == '1') {
                s.append('0');
            } else {
                s.append('1');
            }
        }  
        int res = Integer.parseInt(s.toString(), 2);
        return res;
    }
}
