class Solution {
    public int[] nextGreaterElements(int[] nums) {
        int n = nums.length;
        int[] answer = new int[n];       
        Arrays.fill(answer,-1) ;
        Stack <Integer> s = new Stack<>();
        for(int i = 0 ; i < n*2 ; i ++){
            int index = i % n ;
            while(!s.isEmpty() && nums[s.peek()]<nums[index]){
                answer[s.pop()]=nums[index];
            }
            if(i < n){
                s.push(index);
            }
        }
        return answer;
    }
}
