class Solution {
    public int numIslands(char[][] grid) {
        int n = grid.length ;
        int m = grid[0].length , cnt = 0;
        for(int i = 0 ; i < n ; i++){
            for(int j = 0 ; j < m ; j ++){
                if(grid[i][j]=='1'){
                    cnt++;
                    floor(i,j,grid);
                }
            }
        }
        return cnt;
    }
    static void floor(int i , int j , char[][] g){
        if(i<0 || j < 0 || i >= g.length || j >= g[0].length || g[i][j]!='1') return ;
        g[i][j]='0';
        floor(i+1,j,g);
        floor(i-1,j,g);
        floor(i,j+1,g);
        floor(i,j-1,g);
    }
}
