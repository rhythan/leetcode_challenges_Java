class Solution {
    public String longestNiceSubstring(String s) {
        String ans = "";
        for (int i = 0; i < s.length(); i++) {
            boolean[] lower = new boolean[26];
            boolean[] upper = new boolean[26];
            for (int j = i; j < s.length(); j++) {
                char ch = s.charAt(j);
                if (ch >= 'a' && ch <= 'z') {
                    lower[ch - 'a'] = true;
                } else {
                    upper[ch - 'A'] = true;
                }
                if (check(lower, upper)) {
                    if (j - i + 1 > ans.length()) {
                        ans = s.substring(i, j + 1);

                    }
                }
            }

        }
        return ans;
    }

    static boolean check(boolean[] lower, boolean[] upper) {
        for (int i = 0; i < 26; i++) {
            if (lower[i] != upper[i])
                return false;
        }

        return true;
    }
}
